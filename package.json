{
  "name": "mapmaker-lite",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "main": "electron/main.cjs",
  "scripts": {
    "dev": "concurrently -k -n vite,electron -c blue,green \"vite --port 5173\" \"cross-env VITE_DEV_SERVER_URL=http://localhost:5173 electron .\"",
    "start": "electron .",
    "build:web": "vite build",
    "build:desktop": "pnpm build:web && electron-builder",
    "preview": "vite preview",
    "tauri:dev": "concurrently -k \"vite\" \"tauri dev\"",
    "tauri:build": "vite build && tauri build"
  },
  "dependencies": {
    "class-variance-authority": "^0.7.0",
    "lucide-react": "^0.471.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "tailwind-merge": "^2.5.2"
  },
  "devDependencies": {
    "@types/react": "^18.3.8",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react": "^4.3.2",
    "autoprefixer": "^10.4.20",
    "concurrently": "^9.0.1",
    "cross-env": "^7.0.3",
    "electron": "33.4.11",
    "electron-builder": "^25.1.8",
    "postcss": "^8.4.49",
    "tailwindcss": "^3.4.15",
    "typescript": "^5.6.3",
    "vite": "^5.4.10"
  },
  "build": {
    "appId": "com.yourname.mapmakerlite",
    "files": [
      "dist/**",
      "electron/**",
      "package.json"
    ],
    "extraMetadata": {
      "main": "electron/main.cjs"
    },
    "mac": {
      "category": "public.app-category.graphics-design"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Graphics"
    }
  }
}
